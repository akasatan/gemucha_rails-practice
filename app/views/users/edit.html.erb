<%= render 'postos/posto' %>
<p id="notice"><% notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <div class="error-m">
          <% if @user.errors.any? %>
            <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name, class: "form-control name" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
          <%= f.label :profile_image, 'Image' %>
          <%= f.attachment_field :profile_image %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
          <%= f.label :introduction, 'Introduction' %>
          <%= f.text_area :introduction, rows: 5, class: "form-control introduction" %>
          </div>
        </div>
        <div class="form-group">
           <%= f.submit "Update User", class: "btn btn-secondary" %>
　　    <% end %>
      　</div>
    </div><!--col-sm-12-->
  </div><!--row-->
</div><!--container-->