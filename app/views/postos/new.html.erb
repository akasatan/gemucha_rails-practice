<div class="container">
  <%= link_to "←back", postos_path, class: "btn btn-outline-secondary m-3" %>
  <%= form_with model: @posto, local: true do |f| %>
    <%= f.label :content, "投稿内容" %>
    <%= f.text_area :content, class: "form-control m-3", rows: 3, placeholder: "ここに内容を書いてね" %>
    <%= f.submit '投稿', class: "btn btn-outline-primary m-3" %>
  <% end %>
</div>