<%= render 'postos/posto' %>
<div class="container">
  <div class="row">
    <div class="col-5 mx-auto heading-img"><%= @user.name %>と<%= current_user.name %>のチャット部屋</div>
  </div>
  <%= form_with model: @chat, class: "row g-2 offset-md-2 my-3 form-group form-inline", local: true do |f| %>
    <%= f.text_field :message, class: "form-control col-8",  placeholder: "メッセージを送ってみよう" %>
    <%= f.hidden_field :room_id %>
    <%= f.submit '送信する', class: "btn btn-primary col-2 mx-2" %>
  <% end %>
  <% @chats.each do |chat| %>
    <div class="row g-2 offset-md-2">
      <div class="col-1 my-3">
        <%= link_to user_path(chat.user_id) do %>
          <%= attachment_image_tag chat.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50', class: "img" %>
        <% end %>
      </div>
      <div class="col-8 my-2 rounded-3 border border-info">
        <%= chat.message %>
      </div>
    </div>
  <% end %>
</div>